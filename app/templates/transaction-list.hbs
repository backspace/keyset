<h2 id="title">Transactions</h2>


<button {{action 'prev'}} disabled={{model.onFirstPage}}>Prev Page</button>

<button {{action 'next'}} disabled={{model.onLastPage}}>Next Page</button>

<img style="width:10px;visibility:{{if model.isUpdating 'visible' 'hidden'}}" src="/loading.gif"/>

<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Amount</th>
    <th>Description</th>
    <th>Balance</th>
  </tr>
  {{#each tx in model}}
    <tr>
      <td>{{tx.id}}</td>
      <td>{{tx.formattedDate}}</td>
      <td>{{tx.amount}}</td>
      <td>{{tx.description}}</td>
      <td>{{tx.balance}}</td>
    </tr>
  {{/each}}
</table>
